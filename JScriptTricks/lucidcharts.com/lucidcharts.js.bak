/* dialog positions [x,y] iIF x==0 then dialog align to side of working area */
var dialog_positons={
	"Shape Options":	[-5, 100],
	"Fill Color":	[-5, 318],
	"Line Options":	[-5, 520],
	"Line Color":	[-5, 585],
	"Text Options":	[-5, 760],
