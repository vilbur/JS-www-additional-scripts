/*==================================================================================================================================*/
/*
/* ADDMENU:
/*    Add title attribute to menu items for Stylish styling
/*
/* ------------------------------------------------------------------------
/*
/*
/*==================================================================================================================================*/


/* ================================================================================================================================== */
/*	JIDELNICEK:                                                                                                                     
/* ================================================================================================================================== */
/** 
*/
function addTitlesToMenuItems(){
	$('.denik_left .draggable').each(function(){
		$(this).attr('title', $(this).clone()
						.children()
						.remove()
						.end()
						.text()
						.trim() 
					);
	});
}


/* ================================================================================================================================== */
/*	INIT                                                                                                                            */
/* ================================================================================================================================== */
	
$(document).ready(function() {
	addTitlesToMenuItems();
});



